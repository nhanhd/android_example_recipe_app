<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <ImageView
        android:id="@+id/recipe_item_img_view"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/ic_food_default" />

    <TextView
        android:id="@+id/recipe_item_txt_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/recipe_item_img_view"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textAlignment="inherit"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recipe_item_txt_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_item_txt_recipe_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/recipe_item_img_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textAlignment="inherit"
        android:textStyle="italic" />
</RelativeLayout>
